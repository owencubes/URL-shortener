  <div class="shorturl">
    <p hidden="true" id="shrturl"><%= url %></p>
    <h1 class="text">Your short URL:</h1>

    <body>
      <div>
        <a class="urle" href="<%= url %>"><%= url %></a>
        <input id="fullurl" value="getLink()" hidden="true"></input>
        <button id="copyBtn" class="copyBtn">üìã</button>
      </div>
    </body>
  </div>
</html>
<script>
function getLink() {
  let link = document.getElementById('shrturl').firstChild.wholeText
  return link
}
let copyBtn = document.getElementById('copyBtn');
copyBtn.onclick = function(){
    let myCode = getLink()
    let fullLink = document.createElement('input');
    document.body.appendChild(fullLink);
    fullLink.value = myCode;
    fullLink.select();
    document.execCommand("copy", false);
    fullLink.remove();
    copyBtn.innerHTML = "Copied To Clipboard!"
    setTimeout(() => {
      copyBtn.innerHTML = "üìã"
    }, 1000)
}
</script>
